{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "paths": {
      "actions/*": ["actions/*"],
      "components/*": ["components/*"],
      "config/*": ["config/*"],
      "contexts/*": ["contexts/*"],
      "dataSources/*": ["dataSources/*"],
      "hooks/*": ["hooks/*"],
      "locale/*": ["locale/*"],
      "pages/*": ["pages/*"],
      "reducers/*": ["reducers/*"],
      "styles/*": ["styles/*"],
      "types/*": ["types/*"]
    },
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es5",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/",
    "test/firstTest.ts",
    "nightwatch.conf.js",
    "test"
  ],
  "exclude": ["node_modules"]
}
